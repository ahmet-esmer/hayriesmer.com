

<% content_for(:breadcrumb) do
    render 'admin/partials/breadcrumb', page_name: 'Kullanıcılar', icon:'list'
 end %>


<div class="table-responsive">
<table class="table table-bordered table-hover table-striped" >
  <thead>
  <tr>
    <th>Adı Soyadı</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.user_name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Sil', admin_user_path(user), method: :delete, data: { confirm: 'silmek istediğinizden eminmisiniz?' } %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
</div>
<br />

<%= link_to new_admin_user_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>  Yeni Kullanıcı
<% end %>