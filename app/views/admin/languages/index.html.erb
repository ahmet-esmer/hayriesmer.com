
<% content_for(:breadcrumb) do
  render 'admin/partials/breadcrumb', page_name: 'Diller', icon:'list'
end %>

  <div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
      <thead>
      <tr>
        <th>Dil AAdı</th>
        <th>Dil Kodu</th>
        <th>İcon</th>
        <th>Durum</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% @admin_languages.each do |language| %>
          <tr>
            <td><%= language.name %></td>
            <td><%= language.code %></td>
            <td><%= language.icon %></td>
            <td><%= language.is_active %></td>
            <td><%= link_to 'Detay',  admin_language_path(language)  %></td>
            <td><%= link_to 'Düzenle', edit_admin_language_path(language) %></td>
            <td><%= link_to 'Sil', admin_language_path(language), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<br>

<%= link_to new_admin_language_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
    Yeni Dil
<% end %>

