

<%= form_for([:admin,@article]) do |f| %>
    <%= render 'admin/partials/form_errors', object: @article %>

    <div class="form-group">
      <%= f.label :type_name %><br />




      <%= f.select :type_name,
                   options_for_select([["Makale", "ARTICLES"], ["Bibliyografya", "BIBLIOGRAPHY"], ["EleÅŸtiri", "CRITICISM"]], :selected => f.object.type_name ),
                   {}, { :class => 'form-control' } %>
    </div>
  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
    <div class="form-group">
      <%= f.label :author %>
      <%= f.text_field :author, :class => 'form-control' %>
    </div>
    <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :keywords %>
      <%= f.text_area :keywords, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :view_count %>
      <%= f.number_field :view_count, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :order %>
      <%= f.number_field :order, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :created_at %>
      <%= f.date_select :created_at, {:order => [:day, :month, :year], :start_year => 1995}, {:class => 'selectpicker'} %>
    </div>

    <div class="form-group">
      <%= f.label :language_id %>
      <%= f.collection_select(:language_id, @languages, :id, :name) %>
    </div>
    <div class="form-group">
      <%= f.label :is_published %><br>
      <%= f.check_box :is_published %>
    </div>
  <div class="form-group">
    <%= f.label :body %><br />
    <%= f.cktext_area :body, :id => 'body' %>
  </div>

  <div class="actions">

    <%= link_to admin_articles_path, class: 'btn btn-default' do %>
        <span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span> Geri
    <% end %>

    <%= button_tag(type: 'submit', class: 'btn btn-small btn-success') do %>
        <span class="glyphicon glyphicon-saved" aria-hidden="true"></span> Kaydet
    <% end %>
  </div>
<% end %>
