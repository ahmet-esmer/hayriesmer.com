
<% content_for(:breadcrumb) do
  render 'admin/partials/breadcrumb', page_name: 'Makaleler', icon:'list'
end %>

<div class="table-responsive">
  <table class="table table-bordered table-hover table-striped" >
    <thead>
      <tr>
        <th>Adı</th>
        <th>Okunma</th>
        <th>Sıra</th>
        <th>Tarih</th>
        <th>Dil</th>
        <th>Tip</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
        <tr>
          <td><%= article.name %></td>
          <td><%= article.view_count %></td>
          <td><%= article.order %></td>
          <td><%= article.created_at.to_date  %></td>
          <td><%= article.language.name %></td>
          <td><%= article.type_name %></td>
          <td><%= link_to 'Detay', admin_article_path(article), :class => "label label-info" %></td>
          <td><%= link_to 'Düzenle', edit_admin_article_path(article), :class=> "label label-primary" %></td>
          <td><%= link_to 'Sil', admin_article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, :class => "label label-danger" %></td>
        </tr>
    <% end %>
    </tbody>
</table>
  </div>

<br />

<%= link_to new_admin_article_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>  Yeni Makale
<% end %>
