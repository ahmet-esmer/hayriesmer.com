<%= form_for( [:admin, @admin_type]) do |f| %>
    <%= render 'admin/partials/form_errors', object: @admin_type %>

  <div class="form-group">
    <%= f.label :code %><br>
    <%= f.text_field :code, :class =>'form-control' %>
  </div>


    <div class="form-group">
      <%= f.label :text %><br />
      <%= f.cktext_area :text, :id => 'body' %>
    </div>

  <div class="form-group">
    <%= f.label :is_active %><br>
    <%= f.check_box :is_active %>
  </div>
  <div class="form-group">
    <%= f.label :language_id %>
    <%= f.collection_select(:language_id, @languages, :id, :name, {}, {class: "form-control"}) %>
  </div>
  <div class="form-group">
    <%= link_to admin_types_path, class: 'btn btn-default' do %>
        <span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span> Geri
    <% end %>

    <%= button_tag(type: 'submit', class: 'btn btn-small btn-success') do %>
        <span class="glyphicon glyphicon-saved" aria-hidden="true"></span> Kaydet
    <% end %>
  </div>
<% end %>
