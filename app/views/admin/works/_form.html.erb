
<%= form_for([:admin, @admin_work]) do |f| %>
        <%= render 'admin/partials/form_errors', object: @admin_work %>


    <div class="form-group">
      <%= f.label "İlişkili Sayfa" %>
      <%= f.collection_select(:parent_id, @parent, :id, :title_tr, :include_blank => "Seçiniz") %>

    </div>

  <div class="form-group">
    <%= f.label :title_tr %><br>
    <%= f.text_field :title_tr, :class => 'form-control'  %>
  </div>
  <div class="form-group">
    <%= f.label :title_en %><br>
    <%= f.text_field :title_en, :class => 'form-control'  %>
  </div>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, :class => 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :keywords %>
      <%= f.text_area :keywords, :class => 'form-control' %>
    </div>

  <div class="form-group">
    <%= f.label :order %><br>
    <%= f.number_field :order, :class => 'form-control'  %>
  </div>
  <div class="form-group">
    <%= f.label :is_active %><br>
    <%= f.check_box :is_active %>
  </div>

    <div class="form-group">
      <%= link_to admin_works_path, class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span> Geri
      <% end %>

      <%= button_tag(type: 'submit', class: 'btn btn-small btn-success') do %>
          <span class="glyphicon glyphicon-saved" aria-hidden="true"></span> Kaydet
      <% end %>
    </div>
<% end %>
