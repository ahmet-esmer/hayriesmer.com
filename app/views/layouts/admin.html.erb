<!DOCTYPE html>
<html>
<head>
  <title>HE Admin</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>

  <%= javascript_include_tag "application" %>

 <!-- <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet"> -->
  <%= csrf_meta_tags %>
</head>
<body style="background-color: #222;">

<div id="wrapper">

  <!-- Navigation -->
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="index.html">HE Admin</a>
    </div>
    <!-- Top Menu Items -->
    <ul class="nav navbar-right top-nav">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <i class="fa fa-user"></i>
          <% if current_user %>
              <%= current_user.user_name %>
          <% end %>
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li>
            <a href="#"><i class="fa fa-fw fa-user"></i> Profile</a>
          </li>
          <li>
            <a href="#"><i class="fa fa-fw fa-gear"></i> Settings</a>
          </li>
          <li class="divider"></li>
          <li>
            <% if current_user %>
                <%= link_to logout_path do %>
                    <i class='fa fa-fw fa-power-off'></i>Log Out
                <% end %>
            <% end %>
          </li>
        </ul>
      </li>
    </ul>
    <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav side-nav">
        <li>
          <%= link_to admin_articles_path do %>
              <i class='fa fa-fw fa-wrench'></i> Makaleler
          <% end %>
        </li>

        <li>
          <%= link_to admin_links_path do %>
              <i class='fa fa-fw fa-link'></i> Linkler
          <% end %>
        </li>

        <li>
          <%= link_to admin_languages_path do %>
              <i class='fa fa-fw fa-wrench'></i> Diller
          <% end %>
        </li>
        <li>
          <%= link_to admin_users_path do %>
              <i class='fa fa-users'></i> Kullanıcılar
          <% end %>
        </li>
      </ul>
    </div>
    <!-- /.navbar-collapse -->
  </nav>

  <div id="page-wrapper">

    <% if content_for?(:breadcrumb) %>
        <%= yield(:breadcrumb) %>
    <% else %>
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">
              <ol class="breadcrumb">
                <li>
                  <i class="fa fa-dashboard"></i>  <a href="index.html">Ana Sayfa</a>
                </li>
              </ol>
            </div>
          </div>
    <% end %>

    <%= render 'admin/partials/flash_messages' %>

    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-body">

            <%= yield %>

          </div>
        </div>
      </div>
    </div>

    </div>

  </div>
  <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->
</body>
</html>