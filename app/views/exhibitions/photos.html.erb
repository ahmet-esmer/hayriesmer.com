<%= render 'partials/current_menu', menu_name:  translate('exhibitions')  %>
<!-- 960 Container -->
<div class="container">

  <div class="sixteen columns">

    <!-- Page Title -->
    <div id="page-title">
      <h2><%= translate("exhibition_photos_detail") %> <span>/ <%=  @exhibition_name %><span></span></h2>


      <div id="filters">
        <!-- Go to www.addthis.com/dashboard to customize your tools -->
        <div class="addthis_sharing_toolbox"></div>
      </div>
      <div class="clear"></div>

      <div id="bolded-line"></div>
    </div>
    <!-- Page Title / End -->

  </div>
</div>
<!-- 960 Container / End -->

<!-- 960 Container -->
<div class="container">

  <!-- Portfolio Content -->
  <div id="portfolio-wrapper">

    <!-- 1/3 Column -->

    <% @exhibition_works.each do |exhibition| %>
        <!-- 1/3 Column -->

        <div class="four columns portfolio-item">
          <div class="picture" style="padding: 15px;">

            <a href="<%= exhibition.photo.url(:original) %>" rel="image" title="<%= exhibition.title %>">
              <%= image_tag exhibition.photo.url(:thumb)%>
              <div class="image-overlay-zoom"></div>
            </a>
          </div>
          <div class="item-description alt">
            <h5></h5>
          </div>
        </div>

    <% end %>


    <!-- End Portfolio Content -->

  </div>
  <!-- End 960 Container -->

</div>
<!-- Wrapper / End -->