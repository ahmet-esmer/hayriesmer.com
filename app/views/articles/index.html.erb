

<%= render 'partials/current_menu', menu_name:  translate('publications')  %>

<div id="page-title">
  <h2><%= translate('publications') %></h2>
  <div id="bolded-line"></div>
</div>

<div class="container">
  <% @articles.each do |article| %>
      <div class="post" style="margin-top: 1px; margin-bottom: 5px" >
        <div class="post-content" style="margin: 1px" >
          <div class="post-title">
            <h2><a href="<%=  article_path(article.name.parameterize, article.id) %>"><%= article.name %></a></h2>
          </div>
          <div class="post-meta"><span><i class="mini-ico-calendar"></i><%=  article.created_at.to_date  %></span>
            <span><i class="mini-ico-user"></i><%= article.author %></span>
          </div>
          <div class="post-description"  >
            <p style="margin: 0 0 1px 0;"> <%= article.description %></p>
          </div>
          <a class="post-entry" href="<%=  article_path(article.name.parameterize, article.id) %>" style="margin: 1px" >
            <%= translate('continue_reading') %>
          </a>
        </div>
      </div>
  <% end %>

</div>