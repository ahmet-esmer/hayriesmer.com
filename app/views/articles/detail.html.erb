

<%= render 'partials/current_menu', menu_name:  translate('publications')  %>

<!-- 960 Container -->
<div class="container">

  <div class="sixteen columns">


    <div id="page-title">
      <h2><%= article_type(@article.type_name) %></h2>

      <div id="filters">
        <!-- Go to www.addthis.com/dashboard to customize your tools -->
        <div class="addthis_sharing_toolbox"></div>
      </div>
      <div class="clear"></div>
      <div id="bolded-line"></div>
    </div>

  </div>
</div>

<div class="container">
      <div class="post">
        <div class="post-content" style="margin: 1px"  >
          <div class="post-title">
            <h2><%= @article.name %></h2>
          </div>
          <div class="post-meta"><span><i class="mini-ico-calendar"></i><%=  @article.created_at.to_date  %></span>
            <span><i class="mini-ico-user"></i><%= @article.author %></span>
          </div>
          <div class="post-description"  >
            <p> <%= raw( @article.body) %></p>
          </div>

          <div>

          </div>
        </div>
      </div>
      </div>