
<!--  960 Container Start -->

<%= render 'partials/current_menu', menu_name:  translate('contact')  %>
<div class="container">

  <!-- Contact Form -->
  <div class="twelve columns">
    <div class="headline no-margin"><h4><%= translate('contact_form') %></h4></div>

    <div class="form-spacer"></div>

    <!-- Success Message -->
    <% flash.each do |type, message| %>
        <div class="<%= flash_class_for_site(type) %>" style="display: block;" >
          <p>
            <span><%= message %></span>
          </p>
          <a class="close" href="#"></a>
        </div>
    <% end %>

    <!-- Form -->
    <div id="contact-form">

      <%= form_for @message, url: contact_path do |message_form| %>

            <div class="field">
              <%= message_form.text_field :name, placeholder: translate("name"), class:"text"%>
            </div>

            <div class="field">
              <%= message_form.email_field :email, placeholder: translate("email"), class:"text"%>
            </div>

            <div class="field">
              <%= message_form.text_area :content, placeholder: translate("message"), class:"text textarea"%>
            </div>

          <div class="field">
            <%= message_form.submit translate('send_message'), class:"button color medium"  %>
            <div class="loading"></div>
          </div>
      <% end %>

    </div>

  </div>
  <!-- Contact Details -->
  <div class="four columns">
    <div><h4><%= translate('social') %></h4></div>
    <div id="social" class="tooltips">
      <a href="https://www.facebook.com/hayri.esmer" rel="tooltip" title="Facebook" class="facebook">Facebook</a>
      <a href="https://twitter.com/hayresmer" rel="tooltip" title="Twitter" class="twitter">Twitter</a>
      <a href="https://www.linkedin.com/profile/view?id=121928517" rel="tooltip" title="LinkedIn" class="linkedin">LinkedIn</a>
      <a href="http://instagram.com/hayriesmerr/" rel="tooltip" title="instagram" class="instagram">instagram</a>
    </div>

  </div>

</div>
<!-- End 960 Container -->